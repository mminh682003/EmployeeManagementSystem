@implements IDisposable
@if (allState.ShowVacationType)
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="float-start"> Loại hình phạt</h4>
                        <button class="btn btn-outline-success float-end" @onclick="OpenDialog">
                            <i class="bi bi-plus-circle-dotted"></i> Thêm mới
                        </button>
                    </div>
                    <div class="card-header" style="max-height:580px; overflow-x:hidden; overflow-y:scroll;">
                        <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col"> #</th>
                                        <th scope="col"> Id</th>
                                        <th scope="col"> Kiểu</th>
                                        <th scope="col"> Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Types is not null)
                                    {
                                        int count = 1;
                                        foreach (var item in Types)
                                        {
                                            <tr>
                                                <th scope="row"> @count</th>
                                                <td> @item.Id</td>
                                                <td> @item.Name</td>
                                                <td>
                                                    <i class="bi bi-pencil text-info" id="cursorStyle"
                                                       @onclick="()=>EditClicked(item)"></i>
                                                    <i class="bi bi-trash text-danger" id="cursorStyle"
                                                       @onclick="()=>DeleteClicked(item)"></i>
                                                </td>
                                            </tr>
                                            count++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4"><div class="alert alert-info text-center">Không có kiểu nào được thêm</div></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    #cursorStyle {
        cursor: pointer;
    }
</style>

<VacationTypeDialog @ref="vacationTypeDialog"
                    HandleSaveOperationEvent="HandleSaveOperationEvent"
                    VacationType="VacationType"/>


@code {
    VacationTypeDialog? vacationTypeDialog;
    VacationType VacationType = new();
    public string Title { get; set; } = "Add";
    public List<VacationType> Types { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await GetType();
        allState.Action += StateHasChanged;
    }
    private async Task GetType()
    {
        Types = await  vacationTypeService.GetAll(Constants.VacationTypeBaseUrl);
    }
    void OpenDialog() => vacationTypeDialog?.OpenDialog();
    //Thêm và cập nhật
    //Thêm
    private async Task HandleSaveOperationEvent(VacationType item)
    {
        bool check = false;
        if (item.Id > 0)
        {
            var result = await vacationTypeService.Update(item, Constants.VacationTypeBaseUrl);
            check = await DisplayMessage(result.Flag, result.Message);
        }
        else
        {
            var response = await vacationTypeService.Insert(item, Constants.VacationTypeBaseUrl);
            check = await DisplayMessage(response.Flag, response.Message);
        }
        if (check)
        {
            VacationType = new();
            await GetType();
            vacationTypeDialog?.ChangeTitle("Add");
        }
    }
    //Cập nhật
    private void EditClicked(VacationType item)
    {
        vacationTypeDialog?.ChangeTitle("Update");
        VacationType = item;
        OpenDialog();
    }
    public void ChangeTitle(string title)
    {
        Title = title;
    }
    //Xóa
    private async Task DeleteClicked(VacationType item)
    {
        bool confirm = await dialogService.ConfirmAsync($"Bạn có chắc chắn muốn xóa kiểu nghỉ phép: {item.Name}?", "Xác nhận xóa");
        if (!confirm) return;
        var response = await vacationTypeService.DeleteById(item.Id, Constants.VacationTypeBaseUrl);
        if (await DisplayMessage(response.Flag, response.Message))
        {
            await GetType();
        }
    }

    private async Task<bool> DisplayMessage(bool flag, string message)
    {
        if (flag)
        {
            await dialogService.AlertAsync(message, "Thông báo!");
            return true;
        }
        else
        {
            await dialogService.AlertAsync($"Có lỗi xảy ra: {message}", "Cảnh báo!!!");
            return false;
        }
    }
    public void Dispose()
    {
        allState.Action -= StateHasChanged;
    }
}
